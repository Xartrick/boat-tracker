<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ContainershipActivity"
    tools:menu="@menu/menu_containership"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:columnCount="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Name" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Captain's name" />

    <TextView
        android:id="@+id/text_captain_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Type" />

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Port" />

    <TextView
        android:id="@+id/text_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Containers" />

    <TextView
        android:id="@+id/text_containers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Available Space" />

    <TextView
        android:id="@+id/text_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" />

</GridLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContainershipActivity">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship name"/>

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship Type"
            android:layout_below="@+id/text_name"/>

        <Button
            android:id="@+id/button_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate distance"
            android:layout_below="@+id/text_type"/>

        <Button
            android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show map"
            android:layout_below="@+id/button_distance"/>

    </RelativeLayout>

</LinearLayout>
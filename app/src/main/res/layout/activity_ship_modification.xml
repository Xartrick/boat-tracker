<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContainershipActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin=""
            android:text="Ship name" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_name"
            android:text="Ship name" />

        <TextView
            android:id="@+id/label_captain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="89dp"
            android:text="Ship Captain's name" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_captain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_captain_name"
            android:text="Ship Captain's name" />

        <TextView
            android:id="@+id/label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_captain_name"
            android:layout_alignEnd="@+id/text_name"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="-25dp"
            android:text="Ship Type" />

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_type"
            android:layout_alignEnd="@+id/label_name"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-44dp" />

        <TextView
            android:id="@+id/label_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_type"
            android:layout_alignStart="@+id/button_save"
            android:layout_marginStart="3dp"
            android:layout_marginTop="54dp"
            android:text="Ship Latitude" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_latitude"
            android:layout_alignEnd="@+id/label_captain_name"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-7dp"
            android:text="Ship Latitude" />

        <TextView
            android:id="@+id/label_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_latitude"
            android:layout_alignStart="@+id/spinner_port"
            android:layout_marginStart="-25dp"
            android:layout_marginTop="-65dp"
            android:text="Ship Longitude" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_longitude"
            android:layout_marginStart="24dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/text_captain_name"
            android:text="Ship Longitude" />


        <TextView
            android:id="@+id/label_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_longitude"
            android:layout_alignParentStart="true"
            android:layout_marginStart="224dp"
            android:layout_marginTop="-155dp"
            android:text="Ship Port" />

        <Spinner
            android:id="@+id/spinner_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_port"
            android:layout_alignEnd="@+id/text_name"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-185dp" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_port"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="184dp"
            android:text="Save Changes" />

        <Button
            android:id="@+id/button_edit_containers"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/button_save"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="-47dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/button_save"
            android:text="Edit Containers" />

    </RelativeLayout>

</LinearLayout>
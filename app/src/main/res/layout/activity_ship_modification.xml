<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContainershipActivity">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship name"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_captain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship Captain's name"
            android:layout_below="@+id/text_name"/>

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_captain_name"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship Latitude"
            android:layout_below="@+id/spinner_type"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship Longitude"
            android:layout_below="@+id/text_latitude"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship Port"
            android:layout_below="@+id/text_longitude"/>

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:layout_below="@+id/text_port"/>

        <Button
            android:id="@+id/button_edit_containers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Containers"
            android:layout_below="@+id/button_save"/>

    </RelativeLayout>

</LinearLayout>